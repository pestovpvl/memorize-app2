<% if !media.empty? %>
  <div class="d-flex flex-wrap">
    <% media.each do |url| %>
      <div class="col-12 col-md-6 col-lg-4">
        <img data-cards-url-value="<%= url %>" src='' alt="media" class="img-fluid m-2" style="width: 100%; object-fit: cover;">
      </div>
    <% end %>
  </div>
<% else %>
  <p>No media found</p>
<% end %>